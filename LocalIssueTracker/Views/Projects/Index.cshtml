@model IEnumerable<LocalIssueTracker.Models.Project>

@{
    ViewBag.Title = "Projects - Index";
}

<h2>Projects - Index</h2>

<p>
    @Html.ActionLink("Create New", "Create")
</p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Name)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Description)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.CreatedDate)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.ModifiedDate)
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.ActionLink(item.Name, "Details", new { id = item.ProjectID })
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Description)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.CreatedDate)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.ModifiedDate)
        </td>
        <td>
            @Html.ActionLink("Edit", "Edit", new { id = item.ProjectID }, new { @class = "btn btn-sm btn-default" })
            @{var disabled = item.Issues.Count > 0 ? "disabled" : "";}
            @*@Html.ActionLink("Delete", "Delete", new { id = item.ProjectID }, new { @class = "btn btn-sm btn-default @disabled" })*@
            <a href="/Projects/Delete/@item.ProjectID" class="btn btn-sm btn-default @disabled">Delete</a>
        </td>
    </tr>
}

</table>
